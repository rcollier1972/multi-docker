{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "rcollier1972/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "rcollier1972/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "rcollier1972/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "rcollier1972/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
	{
	  "hostPort": 80,
	  "containerPort": 80
	}
      ],
      "links": ["client","server"] 
    }
  ]
}

